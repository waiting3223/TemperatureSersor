<UserControl x:Class="溫溼度感測器.Parameter_monitoring_window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:溫溼度感測器"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="ParameterTitle" Grid.Row="0" Text="Temperature"  MinHeight="100" MaxHeight="100" FontSize="25"/>
        <Grid Grid.Row="1" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5.5*"/>
                    <ColumnDefinition Width="4.5*"/>
                </Grid.ColumnDefinitions>
               <TextBlock x:Name="ParameterData" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Text="25度C"/>
               <Image x:Name="ParameterImage" Grid.Column="1"/>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
